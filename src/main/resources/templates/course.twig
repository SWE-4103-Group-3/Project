{% extends 'dashboard.twig' %}

{% block style %}
    {{ parent() }}
    <link href="/static/css/course.css" rel="stylesheet"/>
{% endblock %}

{% block content %}
    <div class="course-editor-body">
        <div class="course-editor-title">
            <h1>{{ course.name }}</h1>
        </div>
        <div class="course-editor-grid">
            <div id="course-seating-grid"></div>
        </div>
        {% if user.getHasExtendedPrivileges %}
            <div class="course-editor-controls">
                <button id="editsave" type="button" class="btn btn-primary">Edit</button>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block script %}
    {{ parent() }}
    <script type="text/javascript" src="/static/js/grid.js"></script>
    <script>
        var user = {
            id: {{ user.id }},
            username: '{{ user.username }}',
            hasExtendedPrivileges: {{ user.hasExtendedPrivileges }}
        }
        console.log(user);

    	var grid;
    	
        $(document).ready(function () {
            $.ajax({
                type: "get",
                url: "/courses/{{ course.id }}",
                dataType: "json",
                success: function (course, status) {
                	console.log(course);
                    grid = new Grid({
                        rows: course.rows,
                        cols: course.cols,
                        id: course.id,
                        seats: course.seats,
                        selectable: true,
                        states: ["open", "closed", "reserved"]
                    });
                    $('#course-seating-grid').append(grid.el);
                },
                error: function (data, status) {
                    console.log(data);
                }
            });
        });

        {% if user.getHasExtendedPrivileges %}
        $('#editsave').on('click', function (e) {
            if (grid.editable) {
                grid.editable = false;
                $('#editsave').html('Edit');
                var seats = grid.getSeats();
                console.log(seats);
                $.ajax({
                    type: "post",
                    url: "/courses/{{ course.id }}/seats",
                    data: JSON.stringify(seats),
                    contentType: "application/json",
                    error: function (data, status) {
                        console.error(data);
                    }
                });

            } else {
                grid.editable = true;
                $('#editsave').html('Save');
            }
        });
        {% endif %}
    </script>
{% endblock %}

