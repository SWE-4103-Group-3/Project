{% extends 'base_instructor.twig' %}

{% block content %}
    {{ parent() }}
    <div class="welcome-text">
        <h1>Welcome Back, {{ "User" }}!</h1>
        <p>Select a course from the course list, or create a course.</p>
        <button type="button" data-target="#courseForm" class="btn btn-primary" data-toggle="collapse" aria-expanded="false" aria-controls="courseForm">Create Course</button>
        {% include '/templates/courseFormView.twig' %}
    </div>

{% endblock %}

{% block script %}
    <script type="text/javascript">
        $(document).ready(function() {
            $('.datepicker').pickadate({
                formatSubmit: 'yyyy-mm-dd',
                hiddenName: true
            });
            $('.timepicker').pickatime({
                twelvehour: true
            });

        });
    </script>
{% endblock %}
